{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@web/*": ["src/*"]
    }
  },
  "include": ["src", "next.env.d.ts", "next.config.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
